programa {
  funcao inicio() {
    

   real reais, dolar, marco, libra

   escreva("Digite a quantidade em reais: ")
   leia(reais)

   dolar = reais / 1.80
   marco = reais / 2.00
   libra = reais / 3.57

   escreva("Em dólares: ", dolar, "\n")
   escreva("Em marcos alemães: ", marco , "\n")
   escreva("Em libras esterlinas: ", libra)


  }
}
